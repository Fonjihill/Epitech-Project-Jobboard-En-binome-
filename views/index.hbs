    <div class="container p-4 ">
      
      <section class="">
        <p class="d-flex justify-content-center align-items-center">
          <span class="me-3">JobBoard, nous prennons en compte vos compétences</span>
        </p>
      </section>
      
    </div>
    

    <!-- Copyright -->
